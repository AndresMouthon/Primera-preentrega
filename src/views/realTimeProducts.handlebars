<nav style="background-color: #333; padding: 10px; display: flex; align-items: center; justify-content: space-between;">
    <h1 style="color: white; margin: 0;">MANDOSED</h1>
    <a href="/"
        style="color: white; text-decoration: none; padding: 10px; border: 1px solid white; border-radius: 5px; transition: background-color 0.3s;">
        Inicio
    </a>
</nav>
<div style="display: flex; flex-wrap: wrap; justify-content: space-between; padding: 20px;">
    <div style="flex: 1; margin-right: 20px;">
        {{#each products}}
        <div
            style="background: white; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); margin: 10px; padding: 16px; text-align: center;">
            <h2 style="font-size: 20px; margin: 10px 0;">{{this.title}}</h2>
            <p style="color: #666;">{{this.description}}</p>
            <div style="font-size: 24px; color: #333; margin: 10px 0;">$ {{this.price}}</div>
            <p style="color: green;">En stock: {{this.stock}}</p>
            <p style="margin: 0;">Código: {{this.code}}</p>
            <p style="margin: 0;">Categoría: {{this.category}}</p>
            <button onclick="deleteProduct('{{this.id}}')"
                style="background-color: #e74c3c; color: white; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer; margin-top: 10px; transition: background-color 0.3s;">
                Eliminar
            </button>
        </div>
        {{/each}}
    </div>

    <div style="flex: 1;">
        <h2 style="margin-bottom: 10px;">Registrar Nuevo Producto</h2>
        <form id="productForm"
            style="background: white; border: 1px solid #ddd; border-radius: 8px; padding: 16px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
            <div style="grid-column: span 2;">
                <label for="title" style="display: block; margin-bottom: 5px;">Título:</label>
                <input type="text" id="title" name="title" required
                    style="width: 97%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
            </div>
            <div style="grid-column: span 2;">
                <label for="description" style="display: block; margin-bottom: 5px;">Descripción:</label>
                <textarea id="description" name="description" required
                    style="width: 97%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;"></textarea>
            </div>
            <div>
                <label for="price" style="display: block; margin-bottom: 5px;">Precio:</label>
                <input type="number" id="price" name="price" required
                    style="width: 93%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
            </div>
            <div>
                <label for="stock" style="display: block; margin-bottom: 5px;">Stock:</label>
                <input type="number" id="stock" name="stock" required
                    style="width: 93%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
            </div>
            <div>
                <label for="code" style="display: block; margin-bottom: 5px;">Código:</label>
                <input type="text" id="code" name="code" required
                    style="width: 93%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
            </div>
            <div>
                <label for="category" style="display: block; margin-bottom: 5px;">Categoría:</label>
                <input type="text" id="category" name="category" required
                    style="width: 93%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
            </div>
            <div style="grid-column: span 2;">
                <button type="button" onclick ="registerProduct()"
                    style="background-color: #333; color: white; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer;">
                    Registrar Producto
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/Acciones.js"></script>